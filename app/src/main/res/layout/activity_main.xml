<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:gauge="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.salmankhalid.ui_test.MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lv_main">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="1dp">

            <Button
                android:text="Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button" />

            <Button
                android:text="Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button2" />

            <TextView
                android:text="123456789"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/msg"
                android:layout_weight="0.17"
                android:textAppearance="@style/TextAppearance.AppCompat" />


        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <com.example.salmankhalid.ui_test.library.GaugeView
                        android:id="@+id/g_temp"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        gauge:showNeedle="true"
                        gauge:showRanges="true"
                        gauge:showText="true"
                        gauge:textUnit="%"
                        gauge:textValueSize="5"
                        gauge:showScale="true"
                        android:layout_weight="1"
                        gauge:showRangeText="true"/>

                    <TextView
                        android:text="0"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@android:color/black"
                        android:id="@+id/txtTemp"
                        android:layout_weight="1" />

                </LinearLayout>
                <LinearLayout
                    android:orientation= "vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <com.example.salmankhalid.ui_test.library.GaugeView
                        android:id="@+id/g_humid"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        gauge:showNeedle="true"
                        gauge:showRanges="true"
                        gauge:showText="true"
                        gauge:textUnit="%"
                        gauge:textValueSize="5"
                        gauge:showScale="true"
                        gauge:showRangeText="true"
                        android:layout_weight="1"/>

                    <TextView
                        android:text="TextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtHumid"
                        android:gravity="center"
                        android:textColor="@android:color/black"
                        android:layout_weight="1" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <com.example.salmankhalid.ui_test.library.GaugeView
                        android:id="@+id/g_water"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        gauge:showNeedle="true"
                        gauge:showRanges="true"
                        gauge:showText="true"
                        gauge:textUnit="%"
                        gauge:textValueSize="5"
                        gauge:showScale="true"
                        android:layout_weight="1"
                        gauge:showRangeText="true">
                    </com.example.salmankhalid.ui_test.library.GaugeView>

                    <TextView
                        android:text="Temperature"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtWater"
                        android:gravity="center"
                        android:textColor="@android:color/black"
                        android:layout_weight="1" />

                </LinearLayout>

                <LinearLayout
                    android:orientation= "vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <com.example.salmankhalid.ui_test.library.GaugeView
                        android:id="@+id/g_power"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        gauge:showNeedle="true"
                        gauge:showRanges="true"
                        gauge:showText="true"
                        gauge:textUnit="%"
                        gauge:textValueSize="5"
                        gauge:showScale="true"
                        gauge:showRangeText="true"
                        android:layout_weight="1"/>

                    <TextView
                        android:text="TextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtPower"
                        android:gravity="center"
                        android:textColor="@android:color/black"
                        android:layout_weight="1" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>